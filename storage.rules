rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to plot token images and metadata
    match /plot-tokens/{fileName} {
      allow read: if true;  // Anyone can read plot token files
      allow write: if request.auth != null &&  // Only authenticated users can write
                     (fileName.matches('.*\\.png$') ||  // Only allow .png and .json files
                      fileName.matches('.*\\.json$'));
    }
    
    // Default rule - deny everything else
    match /{allPaths=**} {
      // Allow read access to all files
      allow read;
      // Only allow write access to authenticated users
      allow write: if request.auth != null;
    }
  }
} 